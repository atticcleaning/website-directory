# Site base URL (canonical URLs, Open Graph, Twitter Cards)
# Production: https://atticcleaning.com
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Digital Ocean
DO_API_TOKEN="your-do-api-token-here"

# Database connection (PostgreSQL on Digital Ocean Managed)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Outscraper API token
OUTSCRAPER_API_KEY="your-outscraper-api-key-here"

# Google Maps API key (for listing detail page map embeds)
GOOGLE_MAPS_API_KEY="your-api-key-here"

# Cloudflare (CDN cache purge after deploy)
# Zone ID: found in Cloudflare dashboard > Overview > right sidebar "Zone ID"
CLOUDFLARE_ZONE_ID="your-zone-id-here"
# API Token: create at https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone Settings (Edit), DNS (Edit), Cache Purge (Purge), Zone WAF (Edit)
CLOUDFLARE_API_TOKEN="your-api-token-here"
